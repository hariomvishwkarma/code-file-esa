.fixed-header {
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1;
    background-color: rgb(0, 0, 0);
}


// sticky header 
$(window).scroll(function() {
    if ($(window).scrollTop() >= 100) {
        $('header').addClass('fixed-header');
    } else {
        $('header').removeClass('fixed-header');
    }
});