<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script>
  $(document).ready(function() {
    $('.custom-popup-select').on('change', function() {
      var selectId = $(this).attr("id");
      const selectedOption = $("#"+selectId).find('option:selected');
      const dataIdValue = selectedOption.data('id');
      const dataPrice = selectedOption.data('price');
      const dataImage = selectedOption.data('image');
      var varPrice = dataPrice;
      var imageUrl = 'url('+ dataImage +')';
      $(".price-cus-pro-pop-div").text(varPrice);
      $('.'+ selectId +' img').attr('src',dataImage);
       $('.'+ selectId +" .c-main-img-pop-pro").css('background-image', imageUrl);
    });
  });
</script>





custom.js

// Sticky ATC
function initStickyATC() {
    var atcOffset = $('.lp-atc').offset();
  var stickyAtc = $('#lp-sticky-atc');
  
    stickyAtc.hide();
  
  if(atcOffset) {
    $(window).scroll(function() {
        if ($(window).scrollTop() > atcOffset.top) {
            stickyAtc.show();
        } else {
            stickyAtc.hide();
        }
    })
  }
}



//PDP timer progress bar 
function calculateProgress(currentDaysLeft) {
    var days = $('.countdown-progress').data('days-bar');
    var half = days / 2;
    var quarter = days / 4;
    var third = quarter * 3;
    var eighth = days / 8;
    var quarterPlusEighth = quarter + eighth;
    var halfPlusEighth = half + eighth;
    var thirdPlusEighth = third + eighth;
    var innitialDaysLeft = days;
    var daysDiff = days - currentDaysLeft;
   
  if (daysDiff >= days) {
        $('.fill-progress').css('max-width', '100%');
    } else if (daysDiff > thirdPlusEighth) {
        $('.fill-progress').css('max-width', '90%');
    } else if (daysDiff > third) {
        $('.fill-progress').css('max-width', '75%');
    } else if (daysDiff > halfPlusEighth) {
        $('.fill-progress').css('max-width', '65%');
    } else if (daysDiff > half) {
        $('.fill-progress').css('max-width', '50%');
    } else if (daysDiff > quarterPlusEighth) {
        $('.fill-progress').css('max-width', '35%');
    } else if (daysDiff > quarter) {
        $('.fill-progress').css('max-width', '25%');
    } else if (daysDiff > eighth) {
        $('.fill-progress').css('max-width', '15%');
    } else if (daysDiff <= eighth) {
        $('.fill-progress').css('max-width', '5%');
    }

};


//PDP timer 
function initTimer() {
  var year = $('.countdown-wrapper #timer').data('year');
  var month = $('.countdown-wrapper #timer').data('month');
  var day = $('.countdown-wrapper #timer').data('day');
  var hours = $('.countdown-wrapper #timer').data('hours');
  var minutes = $('.countdown-wrapper #timer').data('minutes');
  var seconds = $('.countdown-wrapper #timer').data('seconds');
  
  future  = Date.parse(month + ' ' + day  + ',' + ' ' + year + ' ' + hours + ':'  + minutes + ':' + seconds);
  
  now     = new Date();
  diff    = future - now;

  days  = Math.floor( diff / (1000*60*60*24) );
  hours = Math.floor( diff / (1000*60*60) );
  mins  = Math.floor( diff / (1000*60) );
  secs  = Math.floor( diff / 1000 );
  
  d = days;
  h = hours - days  * 24;
  m = mins  - hours * 60;
  s = secs  - mins  * 60;
  
  if(d < 1) {
    d = 0
  }
  
  document.getElementById("timer")
    .innerHTML =
      '<div class="countdown-days">' + d + '</div>' +
      '<div class="countdown-hours">' + h + '<span>hours</span></div>' +
      '<div class="countdown-minutes">' + m + '<span>minutes</span></div>' +
      '<div class="countdown-seconds">' + s + '<span>seconds</span></div>' ;
  calculateProgress(days);
  initCustomersCounter(days); 
}


//stock counter 
function initCounter() {
    var stockNum1 = $('.lp-stock-number').first();
    var stockNum2 = $('.lp-stock-number').eq(1);
    var stockNum3 = $('.lp-stock-number').eq(2);
    var stockNum4 = $('.lp-stock-number').eq(3);
    var stockNum5 = $('.lp-stock-number').eq(4);
    var stockNum1Text = $('.lp-stock-number').first().text();
    var stockNum2Text = $('.lp-stock-number').eq(1).text();
    var stockNum3Text = $('.lp-stock-number').eq(2).text();
    var stockNum4Text = $('.lp-stock-number').eq(3).text();
    var stockNum5Text = $('.lp-stock-number').eq(4).text();

    var intMinutes = 10;
    var now = new Date();
    var nowMLSeconds = now.getTime();
    var addMlSeconds = (intMinutes * 60) * 1000;
    var newDateObj = new Date(nowMLSeconds + addMlSeconds);
    var newDateObjMlSeconds = newDateObj.getTime();
  
    //set the target time in local storage
   if(!localStorage.getItem('future-time')){
      localStorage.setItem('future-time', newDateObjMlSeconds);
   } 
   
    var localDate = localStorage.getItem('future-time');

  //check if current time == target time
    if(nowMLSeconds > localDate) {    // this needs to be ">"

      var numToSubstract1 = Math.floor(Math.random() * 3) + 1;
      var numToSubstract2 = Math.floor(Math.random() * 3) + 1;
      var numToSubstract3 = Math.floor(Math.random() * 3) + 1;
      var numToSubstract4 = Math.floor(Math.random() * 3) + 1;
      var numToSubstract5 = Math.floor(Math.random() * 3) + 1;
      
      stockNum1Text -= numToSubstract1;
      if(stockNum1Text < 1){stockNum1Text = 10};
      stockNum2Text -= numToSubstract2;
      if(stockNum2Text < 1){stockNum2Text = 10};
      stockNum3Text -= numToSubstract3;
      if(stockNum3Text < 1){stockNum3Text = 10};
      stockNum4Text -= numToSubstract4;
      if(stockNum4Text < 1){stockNum4Text = 10};
      stockNum5Text -= numToSubstract5;
      if(stockNum5Text < 1){stockNum5Text = 10};
      
//       var numsArr = [stockNum1Text,stockNum2Text,stockNum3Text,stockNum4Text,stockNum5Text];
//       var newNumsArr = numsArr.map(biggerThanZero);
//       console.log(numsArr);
//       function biggerThanZero(num) {
//         if(num < 1) {
//       num = 10;
//         }
//         return num;
//    }
      
//       console.log(newNumsArr);
      
      $(stockNum1).text(stockNum1Text); 
      $(stockNum2).text(stockNum2Text); 
      $(stockNum3).text(stockNum3Text);
      $(stockNum4).text(stockNum4Text); 
      $(stockNum5).text(stockNum5Text); 
      
      localStorage.setItem('future-time', newDateObjMlSeconds);     
  }

}



