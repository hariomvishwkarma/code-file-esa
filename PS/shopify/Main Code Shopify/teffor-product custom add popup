//brand referral slider
function initLpSlider() {
  if ( $( "#lp-carousel-wrapper .lp-carousel" ).length ) {
    $( ".lp-carousel").slick( {
      slidesToShow: 5,
      slidesToScroll: 1,

      responsive: [
       {
         breakpoint: 678,
           settings: {
            slidesToShow: 3,
            slidesToScroll: 1,
            infinite: true
          }
         }
      ]
    });
  }
}


//build href for atc in popup
function buildAtcHref(ids, popupAtc) {
  var idsArr = [];

  ids.each(function () {
    idsArr.push($(this).data('id'));
  });

  // Update the atcHref when the quantity input changes
  function updateAtcHref() {
    var atcHref = '/cart/'; // Reset the atcHref to start fresh
    var quantity = $('#quantity').val();
    idsArr.forEach(id => atcHref += id + ':' + quantity + ',');
    popupAtc.attr('href', atcHref);
  }

  // Call the updateAtcHref function on page load
  updateAtcHref();

  // Add event listeners to the plus and minus buttons
  $('.quantity-btn').on('click', function (event) {
    event.preventDefault();
    var direction = $(this).data('quantity');
    var quantityInput = $('#quantity-{{ product_id }}');
    var currentQuantity = parseInt(quantityInput.val());

    if (direction === 'up') {
      quantityInput.val(currentQuantity + 1);
    } else if (direction === 'down' && currentQuantity > 1) {
      quantityInput.val(currentQuantity - 1);
    }

    updateAtcHref();
  });

  // Add an event listener to the quantity input to detect manual changes
  $('#quantity').on('input', updateAtcHref);
}
                   
$('.popup-open').on('click', function() {
    var popupOpenId = $(this).attr('id');
    var popupOpenIndex = popupOpenId.substr(-1);
    var popupBkgToOpen = $(`.popup-bkg${popupOpenIndex}`);
    var popupAtc = $(`.popup-bkg${popupOpenIndex} #popup-atc`);
    var ids = $(`.popup-bkg${popupOpenIndex} .popup-product option:selected`);
    $('.cc-animate-enabled .shopify-section').css('position', 'relative');
    $('.bg-overlay').css('display', 'block');

  $('.quantity_up').on('click', function() {    
    var qplus = parseInt($(this).prev().val()) + 1;
    $('.variant_quantity').attr('data-quantity',qplus);
    $('.var_qut').attr('data-quantity',qplus);  
    var parentElement = $(this).parent().parent().parent().parent();
    var parentClass = parentElement.attr("id");
    var valunew = $("#"+ parentClass +" .custom-checkout a").attr("href");
    var ahrefvalue = valunew.split(":");
    var resultas = ahrefvalue[0];
    $("#"+ parentClass +" .custom-checkout a").attr("href", resultas +":"+ qplus);
    // alert(resultas);
      
  });

  $('.quantity_down').on('click', function() { 
       var qminus = parseInt($(this).next().val()) - 1;        
       if(qminus >= 1 ){
         $('.variant_quantity').attr('data-quantity',qminus);
         $('.var_qut').attr('data-quantity',qminus);
         var parentElement = $(this).parent().parent().parent().parent();
          var parentClass = parentElement.attr("id");
          var valunew = $("#"+ parentClass +" .custom-checkout a").attr("href");
          var ahrefvalue = valunew.split(":");
          var resultas = ahrefvalue[0];
          $("#"+ parentClass +" .custom-checkout a").attr("href", resultas +":"+ qminus);
         //  ids = $(`.popup-bkg${popupOpenIndex} .popup-product input.opt-btn:checked`);
         // buildAtcHref(ids, popupAtc);
       }
       // else{
       //   $('.variant_quantity').attr('data-quantity',1);
       //   $('.var_qut').attr('data-quantity',1);
       //    ids = $(`.popup-bkg${popupOpenIndex} .popup-product input.opt-btn:checked`);
       //   buildAtcHref(ids, popupAtc);
       // } 
     
  });
  
    //call function on popup open
    buildAtcHref(ids, popupAtc);
  
    //call function when variant is changed
    $('.popup-bkg .popup-product select').on('change', function() {
        ids = $(`.popup-bkg${popupOpenIndex} .popup-product option:selected`);
        buildAtcHref(ids, popupAtc);
    });
$('.opt-btn').on('click', function() {
 ids = $(`.popup-bkg${popupOpenIndex} .popup-product input.opt-btn:checked`);
        buildAtcHref(ids, popupAtc);
  // alert('abc');
});
    //open popup
    popupBkgToOpen.fadeIn(500, function() {
        popupBkgToOpen.addClass('active-flex');
    });
    //prevent scroll when popup is opened
    $('body').addClass('block-scroll');
  
    //fix overlapping on SAFARI
     $('.products-sticky').css('overflow-y','hidden');
})

//close popup 
$('.close-popup').on('click', function() {
  $('.bg-overlay').css('display', 'none');
    var popupBkg = $('.popup-bkg');
  $(".cc-animate-enabled .shopify-section").removeAttr("style");
  
    popupBkg.fadeOut(300, function() {
        popupBkg.removeClass('active-flex');
    });
    $('body').removeClass('block-scroll');
  
  //fix overlapping on SAFARI
  setTimeout(function(){        
        $('.products-sticky').css('overflow-y','scroll');
  },500)

})

$('.bg-overlay').on('click', function() {
  $('.bg-overlay').css('display', 'none');
    var popupBkg = $('.popup-bkg');
    popupBkg.fadeOut(300, function() {
        popupBkg.removeClass('active-flex');
    });
    $('body').removeClass('block-scroll');
    setTimeout(function(){        
          $('.products-sticky').css('overflow-y','scroll');
    },500)
})



//button spin for lp
function initButtonSpinner() {
        setTimeout(function() {
            $('.button-spin-lp').each(function() {
                if (!$(this).find("i").length) {
                  $(this).append('<i class="fa fa-circle-o-notch fa-spin fa-2x fa-fw" style="opacity:0"></i>');
                }
                $(this).on('click', function() {
                  $(this).find("i").css('opacity','1');
                  $(this).find("span").hide();
                });
            });
        }, 800);

        window.onpageshow = function() {
            $('.button-spin-lp').find("span").show();
            $('.button-spin-lp').find("i").hide();
        };
}

// customers num on LP counter

function initCustomersCounter(daysLeft) {
  var innitialDays = $('.countdown-progress').data('days-bar');
  var daysDiff = innitialDays - daysLeft;
  var baseNum = Number($('.customers-num').attr('data-num'));
  var step = 27;
  var finalNum = baseNum;
  
  if(daysDiff < 1) {
    $('.customers-num').text(baseNum);
  } else {
    for (var i = 0; i < daysDiff; i++) {
      finalNum += step;
      $('.customers-num').text(finalNum);
    }
  }
}


// END customers num on LP counter

