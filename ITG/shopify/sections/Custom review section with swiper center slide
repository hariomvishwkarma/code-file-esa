</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    var mySwiper = new Swiper('.swiper-review', {
      slidesPerView: 3,
      spaceBetween: 0,
      loop: true,
      centeredSlides: true,
      slideToClickedSlide: true,
      grabCursor: true,
      breakpoints: {
            0: {  // mobile
                slidesPerView: 1
            },
            768: { // tablet
                slidesPerView: 3
            },
        }
    });
  });
</script>
