<div class="custom-tiktok-section color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="custom-tiktok-container page-width">
    {%- unless section.settings.title == blank -%}
        <div class="section-heading__bar sp-small mgb-medium text-{{ section.settings.heading_alignment }}">
            <h2 class="title {{ section.settings.heading_size }}">
                {{ section.settings.title }}
            </h2>
            <p>{{ section.settings.content }}</p>
        </div>
    {%- endunless -%}

    <div class="swiper swiper-tiktok">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <a {% if block.settings.video_link != blank %}href="{{ block.settings.video_link }}" target="_blank" rel="noopener noreferrer"{%else %} role="link"{% endif %} >
              <div class="video-wrapper">
                {% if block.settings.video_file != blank %}
                    {{ block.settings.video_file | video_tag: autoplay: true, loop: true, muted: true, playsinline: true }}
                {% elsif block.settings.video_url != blank %}
                    <video src="{{ block.settings.video_url }}" autoplay muted loop playsinline></video>
                {% else %}
                    <div style="background:#f0f0f0;height:100%;display:flex;align-items:center;justify-content:center;">
                    No video added
                    </div>
                {% endif %}
              </div>
            </a>
            <button class="video-play-pause">‚ùö‚ùö</button>
          </div>
        {% endfor %}
      </div>
      <div class="swiper-pagination"></div>
    </div>
  </div>
</div>

{% javascript %}
    var swiper = new Swiper(".swiper-tiktok", {
    slidesPerView: 4,   // default for desktop
    spaceBetween: 20,
    loop: true,
    pagination: {
        el: ".swiper-pagination",
        clickable: true,
    },
    breakpoints: {
        0: {  // mobile
        slidesPerView: 1
        },
        768: { // tablet
        slidesPerView: 2
        },
        1024: { // desktop
        slidesPerView: 4
        }
    }
    });



  // üé¨ Play/Pause logic
  document.querySelectorAll('.video-play-pause').forEach(button => {
    button.addEventListener('click', function() {
      const video = this.parentElement.querySelector('video');
      if (video.paused) {
        video.play();
        this.textContent = '‚ùö‚ùö'; // pause icon
      } else {
        video.pause();
        this.textContent = '‚ñ∂'; // play icon
      }
    });
  });
{% endjavascript %}

