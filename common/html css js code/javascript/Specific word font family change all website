Specific word font family change all website

<script>
const elements = document.getElementsByTagName('body');

for (let i = 0; i < elements.length; i++) {
  const element = elements[i];
  if (element.innerHTML.includes('YHUH')) {
    const newHTML = element.innerHTML.replace(/YHUH/g, '<span style="font-family: PaleoBora">YHUH</span>');
    element.innerHTML = newHTML;
  }
  if (element.innerHTML.includes('YAHUSHA')) {
    const newHTML = element.innerHTML.replace(/YAHUSHA/g, '<span style="font-family: PaleoBora">YAHUSHA</span>');
    element.innerHTML = newHTML;
  }

  // if (element.innerHTML.includes('Ahlohim')) {
  //   const newHTML = element.innerHTML.replace(/Ahlohim/g, '<span style="font-family: PaleoBora">Ahlohim</span>');
  //   element.innerHTML = newHTML;
  // }
  // if (element.innerHTML.includes('Ahloah')) {
  //   const newHTML = element.innerHTML.replace(/Ahloah/g, '<span style="font-family: PaleoBora">Ahloah</span>');
  //   element.innerHTML = newHTML;
  // }
}
</script>



